

<div class="container d-grid gap-3 mb-5">
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post do |f| %>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Create Title</label>
    <%= f.text_field :title, id: "inputGroup-sizing-default" ,class: "input-group-text" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.text_area :content, id: "floatingTextarea2", class: "form-control", placeholder: "Leave a comment here" %>
  </div>

    <%= f.submit class: "btn btn-primary" %>
  <% end %>

</div>