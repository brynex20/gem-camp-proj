<h1>Post Lists <span><%= link_to "Create New Post", new_post_path(@post), class: "badge text-bg-success" %></span></h1>

<table class="table">
  <thead>
  <tr class="text-bg-primary">
    <th>ID</th>
    <th>TITTLE</th>
    <th>CONTENT</th>
    <th>USER</th>
    <th colspan="3">ACTION</th>
  </tr>
  </thead>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.user.email %></td>
    <td><%= link_to 'Show', post_path(post), class: "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' if post.user == current_user  %></td>
    <td><%= button_to 'X', post_path(post), method: :delete, class: 'btn btn-danger'  if post.user == current_user%></td>
  </tr>
  <% end %>
</table>

